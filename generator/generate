#!/bin/bash

set -euo pipefail
#set -eux

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
PINK='\033[38;5;212m'
GREY='\033[0;90m'
LIGHT_MAGENTA='\033[0;95m'

ENDCOLOR="\e[0m"

print_color() {
  printf "%b%s%b\n" "$1" "$2" "$ENDCOLOR"
}

# Setup the user for docker permissions
USER="$(id -u):$(id -g)"

# Setup the volume mount for both docker runs
VOLUME="$(pwd):/app"

# Install JanePHP's dependencies
docker run \
-u "${USER}" \
-v "${VOLUME}" \
-w /app/generator \
composer:2 \
composer install -q

# TMP - replace with our version
cp "$(pwd)/generator/NonBodyParameterGenerator.php" "$(pwd)/generator/vendor/jane-php/open-api-3/Generator/Parameter/NonBodyParameterGenerator.php"

print_color "${GREY}" "üîß JanePHP dependencies installed"

# Delete any existing client code
print_color "${GREY}" "üóëÔ∏è  Deleting existing client code... "
rm -rf "$(pwd)/src"

print_color "${LIGHT_MAGENTA}" "‚öôÔ∏è  Generating new client..."

# Run the generator for Core
docker run \
-u "${USER}" \
-v "${VOLUME}" \
-w /app/generator \
"php:8.2-cli" \
php -d memory_limit=1G vendor/bin/jane-openapi generate -c jane-openapi-core.php

print_color "${YELLOW}" "‚úÖ New core client successfully generated"

# Run the generator for Public
docker run \
-u "${USER}" \
-v "${VOLUME}" \
-w /app/generator \
"php:8.2-cli" \
php -d memory_limit=1G vendor/bin/jane-openapi generate -c jane-openapi-public.php

print_color "${YELLOW}" "‚úÖ New public client successfully generated"

# Copy over our non-generated files
cp -r ./generator/manual/** ./

print_color "${GREEN}" "‚úÖ New clients successfully generated"
